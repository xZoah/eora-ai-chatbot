# LLM API Keys
OPENAI_API_KEY=your_openai_api_key_here

# Vector Database
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX_NAME=eora-cases

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Database (Supabase) - Transaction Pooler (IPv4 совместимый)
SUPABASE_USER=your_supabase_user_here
SUPABASE_PASSWORD=your_supabase_password_here
SUPABASE_HOST=your_supabase_host_here
SUPABASE_PORT=6543
SUPABASE_DBNAME=postgres

# Альтернативно - полный URL (используется как fallback)
DATABASE_URL=postgresql://username:password@host:port/database

# Redis Cache (Optional - можно удалить)
REDIS_URL=redis://localhost:6379

# Application Settings
DEBUG=true
LOG_LEVEL=INFO

# API Settings
API_HOST=0.0.0.0
API_PORT=8000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Cache Settings
CACHE_TTL=3600  # 1 hour

# Scraping Settings
SCRAPING_DELAY=1  # seconds between requests
MAX_RETRIES=3 